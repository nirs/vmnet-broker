{
  "file_types": {
    // Silence bogus warnings, Zed does not handle multiple YAML
    // documents correctly.
    "Clangd": [".clangd"],
  },
  "languages": {
    "C": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["-assume-filename={buffer_path}"],
        },
      },
    },
  },
}
